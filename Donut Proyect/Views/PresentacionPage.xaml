            <Label Text="Patricia Cedillo Xochipa" HorizontalOptions="Center" Padding="0,0,0,0"></Label>
            <Label Text="Grupo: " HorizontalOptions="Center" Padding="0,20,0,0" FontSize="20"></Label>
            <Label Text="6BMPG" HorizontalOptions="Center" Padding="0,0,0,0"></Label>
            <Label Text="Materia: " HorizontalOptions="Center" Padding="0,20,0,0" FontSize="20"></Label>
            <Label Text="Desarrollo de Aplicaciones IOS" HorizontalOptions="Center"></Label>
            <Image HorizontalOptions="Center" Source="cachorros_blancos.png" WidthRequest="120"></Image>
